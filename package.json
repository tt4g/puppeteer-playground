{
  "name": "puppeteer-playground",
  "version": "0.0.1",
  "description": "puppeteer playground.",
  "main": "build/index.js",
  "scripts": {
    "package:linux": "npm-run-all -s \"package:pkg -- --targets node16-linux-x64\" ",
    "package:mac": "npm-run-all -s \"package:pkg -- --targets node16-macos-x64\" package:post-build",
    "package:windows": "npm-run-all -s \"package:pkg -- --targets node16-win-x64\" package:post-build",
    "package:post-build": "npm-run-all -s package:copy:local-chromium package:copy:html",
    "package:pkg": "pkg --public --config pkg.config.json --output build/dist/puppeteer-playground build/typescript/index.js",
    "package:copy:local-chromium": "shx cp -R node_modules/puppeteer/.local-chromium build/dist/.local-chromium",
    "package:copy:html": "shx cp -R html build/dist/html",
    "build": "npm-run-all -s build:clean build:tsc",
    "build:clean": "shx rm -rf build",
    "build:tsc": "npm-run-all -s \"tsc:build -- --inlineSourceMap\"",
    "lint": "npm-run-all -s lint:prettier lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "format:fix": "npm-run-all -s format:fix:prettier format:fix:eslint",
    "format:fix:prettier": "prettier  --write .",
    "format:fix:eslint": "eslint --fix .",
    "tsc:build": "cross-env NODE_ENV=production tsc --outDir build/typescript",
    "tsc:type-check": "tsc --noEmit",
    "tsc:type-check:watch": "tsc --noEmit --watch",
    "dev:run": "ts-node --files src/index.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --no-notify src/index.ts"
  },
  "author": "tt4g",
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "@types/node": "16.11.7",
    "@types/puppeteer": "5.4.4",
    "@types/source-map-support": "0.5.4",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "cross-env": "7.0.3",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "npm-run-all": "4.1.5",
    "pkg": "5.5.1",
    "prettier": "2.5.1",
    "shx": "0.3.3",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "puppeteer": "13.0.0",
    "source-map-support": "0.5.21"
  }
}
